
    <div class="col-md-8">
      <h2>ユーザー一覧</h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ユーザー名</th>
              <th>自己紹介</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= user.name %>
                </td>
                <td>
                 <%= user.introduction %>
                </td>
         　　　　　　<td>
                  <%= link_to '詳細', user_path(user.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div style="text-align: center;">
          <%= paginate(@users) %>
        </div>