<h1>出費一覧</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>記録日時</th>
        <th>金額</th>
        <th>概要</th>
      </tr>
    </thead>
      <tbody>
        <% @moneys.each do |money| %>
        <tr id="money_<%= money.id %>">
         <td>
          <%= link_to @user.name, user_path(money.user.id) %>
         </td>
         <td>
           <%= link_to money.created_at.strftime('%Y/%m/%d'), money_path(money.id) %>
         </td>
         <td>
           ¥<%= money.payment %>
         </td>
         <td>
           <%= money.memo %>
         </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div style="text-align: center;">
    <%= paginate @moneys %>
  </div>
